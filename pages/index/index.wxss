.banners{
  width: 100%;
  height: 300rps;
}

.banners image{
  width: 100%;
  height: 100%;
}

.navContainer{
  display: flex;
  align-items: center;
}

.navContainer .navItem{
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
}

.navItem .iconfont{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 90rpx;
  background: #d43c33;
  font-size: 50rpx;
  color: #ffffff;
  margin: 20rpx;
}

.navItem text{
  font-size: 25rpx;
}

.recommendContainer .headerBox{
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx;
}
.recommendContainer .headerBox text{
  font-size: 35rpx;
  font-weight: 500;
}

.recommendScroll{
  display: flex;
  box-sizing: border-box;
  padding-right: 20rpx;
}

.recommendScroll .recommendScrollItem{
  width: 200rpx;
  margin-left: 20rpx;
}
.recommendContainer image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.recommendScrollItem view{
 font-size: 26rpx;
}
